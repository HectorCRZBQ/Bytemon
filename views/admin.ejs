<link rel="stylesheet" href="/css/admin.css">

<h1>Administración de Usuarios</h1>

<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Último inicio de sesión</th>
            <th>Conectado</th>
            <th>Nuevo Username</th>
            <th>Nueva Password</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
        <tr>
            <td data-label="Username"><%= user.username %></td>
            <td data-label="Última vez conectado"><%= new Date(user.lastLogin).toLocaleString() %></td>
            <td data-label="Conectado"><%= user.isConnected ? 'Sí' : 'No' %></td>
            <td data-label="Nuevo Username">
                <form action="/admin/<%= user.uuid %>/update" method="POST" style="display: inline;">
                    <input type="text" name="username" value="<%= user.username %>" placeholder="Nuevo Usuario" required>
                </td>
                <td data-label="Nuevo Password">
                    <input type="password" name="password" value="<%= user.username %>" placeholder="Nueva Contraseña">
                </td>
                <td>
                    <button type="submit">Actualizar</button>
                </form>
                <form action="/admin/<%= user.uuid %>/delete" method="POST" style="display: inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>

<a href="/characters" class="return-button button">Volver a la gestión de personajes</a>
