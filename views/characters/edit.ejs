<h1>Editar Personaje</h1>
<form action="/characters/<%= character.id %>/update" method="post">
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" value="<%= character.name %>" required><br>
    <label for="energyLevel">Nivel de Energ√≠a:</label>
    <input type="number" id="energyLevel" name="energyLevel" value="<%= character.energyLevel %>" required><br>
    
    <label for="lifePoints">Puntos de vida:</label>
    <input type="number" id="lifePoints" name="lifePoints" value="<%= character.lifePoints %>" required><br>
    
    <label for="team">Elige tu equipo:</label>
    <select id="team" name="team">
      <option value="Valor" <%= character.team === 'Valor' ? 'selected' : '' %>>Valor</option>
      <option value="Mystic" <%= character.team === 'Mystic' ? 'selected' : '' %>>Mystic</option>
      <option value="Instinct" <%= character.team === 'Instinct' ? 'selected' : '' %>>Instinct</option>
    </select>
    
    <label for="initial">Elige tu ByteMon:</label>
    <select id="initial" name="initial">
      <option value="Charmander" <%= character.initial === 'Charmander' ? 'selected' : '' %>>Charmander</option>
      <option value="Squirtle" <%= character.initial === 'Squirtle' ? 'selected' : '' %>>Squirtle</option>
      <option value="Bulbasaur" <%= character.initial === 'Bulbasaur' ? 'selected' : '' %>>Bulbasaur</option>
    </select>
    
    <button aria-label="Actualizar" type="submit">Actualizar</button>
</form>