<h1>Lista de Jugadores</h1>

<!-- Tabla de personajes -->
<h2>Personajes</h2>
<table border="1">
    <thead>
        <tr>
            <th scope="col">Jugador</th>
            <th scope="col">Bytemon Inicial</th>
            <th scope="col">Equipo</th>
        </tr>
    </thead>
    <tbody>
        <% characters.forEach(character => { %>
            <tr>
                <td data-label="Jugador"><%= character.name %></td>
                <td data-label="Bytemon Inicial"><%= character.initial %></td>
                <td data-label="Equipo"><%= character.team %></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<!-- Tabla de usuarios -->
<h2>Usuarios Registrados</h2>
