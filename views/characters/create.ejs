<h1>Crear Personaje</h1>
<form action="/characters" method="post">
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" required><br>
    
    <label for="energyLevel">Nivel de Energ√≠a:</label>
    <input type="number" id="energyLevel" name="energyLevel" required><br>
    
    <label for="lifePoints">Puntos de vida:</label>
    <input type="number" id="lifePoints" name="lifePoints" required><br>
    
    <label for="team">Elige tu equipo:</label>
    <select id="team" name="team">
        <option value="Valor">Valor</option>
        <option value="Mystic">Mystic</option>
        <option value="Instinct">Instinct</option>
    </select><br>
    
    <label for="initial">Elige tu ByteMon:</label>
    <select id="initial" name="initial">
        <option value="Charmander">Charmander</option>
        <option value="Squirtle">Squirtle</option>
        <option value="Bulbasaur">Bulbasaur</option>
    </select><br>
    <button class= "sound-button" aria-label="Crear" type="submit">Crear</button>
</form>